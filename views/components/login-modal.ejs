<div id="login-wrapper" class="hide">
	<div id="login-modal">
		<div class="formbox">
			<h2>Log In</h2>
			<div class="form-group">
				<p>Email</p>
				<input type="text" id="email" name="email" placeholder="Email">
			</div>
			<div class="form-group password-group hide">
				<p>Password</p>
				<input type="password" id="password" name="password" placeholder="Password">
			</div>
			<div class="form-group password-group password-again hide">
				<p>Password Again</p>
				<input type="password" id="password-again" name="password-again" placeholder="Password Again">
			</div>
			<input type="submit" class="login-btn submit-btn" name="" value="Continue">
		</div>
	</div>
</div>