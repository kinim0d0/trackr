<section class="stats hide">

	<div class="container">

		<div class="row">

			<div class="col-md-12">

				<div class="charts clearfix">
					<div class="chart">
						<canvas id="main-chart"></canvas>
					</div>
				</div>

			</div>

		</div>

		<div class="row">

			<div class="col-md-3">
				<div class="counter">
					<p class="number" data-stat="total-trackers"></p>
					<p class="name">Total Trackers</p>
				</div>
			</div>

			<div class="col-md-3">
				<div class="counter">
					<p class="number" data-stat="total-hours-tracked"></p>
					<p class="name">Total Time Tracked</p>
				</div>
			</div>

			<div class="col-md-3">
				<div class="counter">
					<p class="number" data-stat="total-timers"></p>
					<p class="name">Tracker Snippets</p>
				</div>
			</div>

			<div class="col-md-3">
				<div class="counter">
					<p class="number" data-stat="total-notes"></p>
					<p class="name">Tracker Notes</p>
				</div>
			</div>

			<div class="col-md-3">
				<div class="counter">
					<p class="number" data-stat="total-assigned-times"></p>
					<p class="name">Total Assigned Time</p>
				</div>
			</div>

			<div class="col-md-3">
				<div class="counter">
					<p class="number" data-stat="total-time"></p>
					<p class="name">Total Time on Tasks</p>
				</div>
			</div>

			<div class="col-md-3">
				<div class="counter">
					<p class="number" data-stat="total-todos"></p>
					<p class="name">Total Todos</p>
				</div>
			</div>

			<div class="col-md-3">
				<div class="counter">
					<p class="number" data-stat="completed-todos"></p>
					<p class="name">Completed Todos</p>
				</div>
			</div>

		</div>

	</div>

</section>
